<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.141"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.Sylladex">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" text="Close"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <MenuItem mnemonicParsing="false" text="Delete"/>
            </Menu>
            <Menu mnemonicParsing="false" text="About">
                <MenuItem fx:id="mAbout" mnemonicParsing="false" text="About"/>
            </Menu>
        </MenuBar>
    </top>
    <bottom>
        <HBox alignment="BOTTOM_LEFT" prefHeight="52.0" prefWidth="800.0" spacing="10.0"
              BorderPane.alignment="BOTTOM_LEFT">
            <padding>
                <Insets bottom="10.0" left="10.0"/>
            </padding>
            <Label prefHeight="30.0" text="&gt;" HBox.hgrow="NEVER">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Label>
            <TextField fx:id="textInput" prefHeight="30.0" prefWidth="555.0" promptText="==&gt;" HBox.hgrow="NEVER">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <font>
                    <Font name="Courier" size="13.0"/>
                </font>
            </TextField>
            <Button fx:id="bInputButton" mnemonicParsing="false" onAction="#submit" prefHeight="30.0" text="Submit">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <font>
                    <Font name="Courier" size="13.0"/>
                </font>
            </Button>
        </HBox>
    </bottom>
    <right>
        <TabPane prefWidth="307.0" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Modus List">
                <VBox fx:id="modusMenuList" prefHeight="200.0" prefWidth="100.0">
                    <ToolBar prefHeight="40.0" prefWidth="200.0">
                        <Button fx:id="bRefresh" mnemonicParsing="false" text="Refresh"/>
                    </ToolBar>
                </VBox>
            </Tab>
            <Tab fx:id="cmdTab" text="Commands">
                <Accordion fx:id="cmdAcc" maxHeight="-Infinity">
                    <panes>
                        <TitledPane alignment="TOP_LEFT" maxHeight="-Infinity" text="Sylladex Commands">
                            <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                                <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                </padding>
                                <VBox fx:id="syllCmdList" prefWidth="100.0" spacing="5.0"/>
                            </ScrollPane>
                        </TitledPane>
                        <TitledPane alignment="TOP_LEFT" maxHeight="-Infinity" text="Modus Commands">
                            <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                                <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                </padding>
                                <VBox fx:id="modusCmdList" prefWidth="100.0" spacing="5.0"/>
                            </ScrollPane>
                        </TitledPane>
                        <TitledPane alignment="TOP_LEFT" maxHeight="-Infinity" text="Misc.">
                            <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                                <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                </padding>
                                <VBox fx:id="miscList" prefWidth="100.0" spacing="5.0"/>
                            </ScrollPane>
                        </TitledPane>
                    </panes>
                </Accordion>
            </Tab>
            <Tab text="Help">
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <Separator prefWidth="200.0"/>
                    <GridPane>
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Button fx:id="bReset" alignment="TOP_LEFT" contentDisplay="CENTER"
                                mnemonicParsing="false" onAction="#reset" text="Reset!!"
                                GridPane.columnIndex="1" GridPane.halignment="CENTER"
                                GridPane.rowIndex="3" GridPane.valignment="TOP">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                            <font>
                                <Font name="Courier" size="13.0"/>
                            </font>
                        </Button>
                        <Label text="In case you need to soft restart the sylladex and modus, press the below button. NOTE: Will clear the current held deck."
                               textAlignment="JUSTIFY" wrapText="true" GridPane.columnSpan="3"
                               GridPane.rowIndex="1" GridPane.rowSpan="2" GridPane.valignment="TOP">
                            <font>
                                <Font size="11.0"/>
                            </font>
                            <padding>
                                <Insets left="5.0" right="5.0"/>
                            </padding>
                        </Label>
                        <Label text="Panic Button">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                    </GridPane>
                    <Separator prefWidth="200.0"/>
                </VBox>
            </Tab>
        </TabPane>
    </right>
    <center>
        <SplitPane dividerPositions="0.8508914100486223" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0"
                   BorderPane.alignment="CENTER">
            <StackPane fx:id="display" alignment="TOP_LEFT" onMouseClicked="#displayClick" prefHeight="575.0"
                       prefWidth="690.0" SplitPane.resizableWithParent="false"/>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                <TextArea fx:id="textOutput" editable="false" prefHeight="110.0" prefWidth="677.0"
                          text="Terminal Output..." wrapText="true" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="Courier" size="13.0"/>
                    </font>
                </TextArea>
            </HBox>
        </SplitPane>
    </center>
</BorderPane>
